<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_menu_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.viewpager.widget.ViewPager
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/SliderDots"
                app:layout_constraintTop_toBottomOf="@+id/viewPager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_below="@+id/viewPager"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/categoriesTextContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SliderDots">
                <TextView
                    android:id="@+id/categoriesForYouTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categories For You"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="16sp"></TextView>
                <TextView
                    android:id="@+id/seeAllCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="16sp"></TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/categoriesHorizontalScrollView"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/categoriesTextContainer"
                android:scrollbars="none">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:padding="2dp"
                        android:id="@+id/categoriesCardThree"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/white"
                        android:layout_toEndOf="@+id/categoriesCardTwo"
                        android:background="@color/white"
                        android:layout_toRightOf="@+id/categoriesCardTwo">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/bg"></ImageView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:padding="2dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/white"
                        android:id="@+id/categoriesCardOne"
                        android:background="@color/white">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/bg"></ImageView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:padding="2dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/white"
                        android:id="@+id/categoriesCardTwo"
                        android:layout_toEndOf="@+id/categoriesCardOne"
                        android:background="@color/white"
                        android:layout_toRightOf="@+id/categoriesCardOne">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/bg"></ImageView>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </HorizontalScrollView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/offersForYouTxtContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/categoriesHorizontalScrollView">
                <TextView
                    android:id="@+id/offersForYouTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Offers For You"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"></TextView>
                <TextView
                    android:id="@+id/seeAllOffers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:textColor="@color/blue"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="16sp"></TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/horizontalScrollView"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/offersForYouTxtContainer"
                android:scrollbars="none">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:padding="2dp"
                        android:id="@+id/cardThree"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/white"
                        android:layout_toEndOf="@+id/cardTwo"
                        android:background="@color/white"
                        android:layout_toRightOf="@+id/cardTwo">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/bg"></ImageView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:padding="2dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/white"
                        android:id="@+id/cardOne"
                        android:background="@color/white">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/bg"></ImageView>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:padding="2dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/white"
                    android:id="@+id/cardTwo"
                    android:layout_toEndOf="@+id/cardOne"
                    android:background="@color/white"
                    android:layout_toRightOf="@+id/cardOne">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bg"></ImageView>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </HorizontalScrollView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/recommendationTxtContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">
                <TextView
                    android:id="@+id/recommendationTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Recommendation For You"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"></TextView>
                <TextView
                    android:id="@+id/seeAllRecommendation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:textColor="@color/blue"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="16sp"></TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/recommendationHorizontalScrollView"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/recommendationTxtContainer"
                android:scrollbars="none">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:padding="2dp"
                        android:id="@+id/card2Three"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/white"
                        android:layout_toEndOf="@+id/card2Two"
                        android:background="@color/white"
                        android:layout_toRightOf="@+id/card2Two">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/bg"></ImageView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:padding="2dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/white"
                        android:id="@+id/card2One"
                        android:background="@color/white">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/bg"></ImageView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:padding="2dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/white"
                        android:id="@+id/card2Two"
                        android:layout_toEndOf="@+id/card2One"
                        android:background="@color/white"
                        android:layout_toRightOf="@+id/card2One">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/bg"></ImageView>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </HorizontalScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>